<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/service_search_result_background_interactive">
        <TextView
            android:id="@+id/result_service_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/item_spacing"
            android:paddingRight="@dimen/item_spacing"
            android:paddingTop="@dimen/item_spacing"
            android:paddingBottom="@dimen/item_spacing"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/item_spacing"
            android:layout_marginRight="@dimen/item_spacing"
            android:paddingTop="@dimen/item_spacing"
            android:paddingBottom="@dimen/item_spacing"
            android:background="@color/colorDivider"  />
        <TextView
            android:id="@+id/result_available_services_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_spacing"
            android:layout_marginRight="@dimen/item_spacing"
            android:paddingTop="@dimen/item_spacing"
            android:paddingBottom="@dimen/item_spacing"
            android:textSize="14sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/item_spacing"
            android:layout_marginRight="@dimen/item_spacing"
            android:paddingTop="@dimen/item_spacing"
            android:background="@color/colorDivider"  />
        <TextView
            android:id="@+id/result_location_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/item_spacing"
            android:paddingRight="@dimen/item_spacing"
            android:paddingTop="@dimen/item_spacing"
            android:paddingBottom="@dimen/item_spacing"
            android:textSize="14sp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/remove_recent_service_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/item_spacing"
        android:paddingBottom="@dimen/item_spacing"
        android:paddingTop="@dimen/item_spacing"
        android:paddingRight="@dimen/item_spacing"
        android:layout_gravity="end|top"
        android:src="@drawable/ic_clear_black_24dp"
        android:background="@drawable/transparent_background_round_interactive"
        android:clickable="true"/>
</FrameLayout>