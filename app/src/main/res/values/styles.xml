<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Settings -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorToolbarPrimaryText</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryText</item>
        <item name="actionMenuTextColor">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorToolbarPrimaryText</item>
    </style>

    <style name="TabLayoutTheme" parent="ToolbarTheme">
        <item name="android:textColorSecondary">@color/colorPrimaryText</item>
    </style>

    <!-- Changes each overflow menu item color -->
    <style name="TextAppearance">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TitledDialogFragment" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

</resources>
